{
  "name": "trunk-api",
  "version": "0.0.1",
  "description": "The api for all the Trunk services",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trunk-app-inc/trunk-api.git"
  },
  "author": "Bobby Boyd",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/trunk-app-inc/trunk-api/issues"
  },
  "homepage": "https://github.com/trunk-app-inc/trunk-api#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt": "^3.0.6",
    "concurrently": "^4.1.0",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.2",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "showdown": "^1.9.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.11"
  }
}
